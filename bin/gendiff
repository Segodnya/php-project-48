#!/usr/bin/env php

<?php

// Don't forget to run chmod +x bin/gendiff

require_once __DIR__ . '/../vendor/autoload.php';
require_once __DIR__ . '/../src/fileParser.php';
require_once __DIR__ . '/../src/Differ.php';

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help       Show this screen
  -v --version    Show version
  --format <fmt>  Report format [default: stylish]
DOC;

$arguments = Docopt::handle($doc);

// Get paths to files
$firstFile = $arguments['<firstFile>'];
$secondFile = $arguments['<secondFile>'];

// Parse JSON files
try {
  $firstData = parseJsonFile($firstFile);
  $secondData = parseJsonFile($secondFile);

  $diff = Differ\Differ\genDiff($firstData, $secondData);
  echo $diff . PHP_EOL;
} catch (Exception $e) {
  echo "Error: " . $e->getMessage() . PHP_EOL;
  exit(1);
}
