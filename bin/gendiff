#!/usr/bin/env php

<?php

// Don't forget to run chmod +x bin/gendiff

use function Hexlet\Code\Differ\genDiff;

$autoloadPathGlobal = __DIR__ . '/../../../autoload.php';
$autoloadPathLocal = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPathGlobal)) {
    require_once $autoloadPathGlobal;
} else {
    require_once $autoloadPathLocal;
}


$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help       Show this screen
  -v --version    Show version
  --format <fmt>  Report format [default: stylish]
DOC;

$arguments = Docopt::handle($doc);

$firstFilePath = $arguments['<firstFile>'];
$secondFilePath = $arguments['<secondFile>'];

// Validate paths
if (!is_string($firstFilePath) || !is_string($secondFilePath)) {
  echo "Error: Both file paths must be provided as strings." . PHP_EOL;
  exit(1);
}

// Parse files
try {
    $diff = genDiff($firstFilePath, $secondFilePath);

    echo $diff . PHP_EOL;
} catch (Exception $e) {
    echo "Error: " . $e->getMessage() . PHP_EOL;
    exit(1);
}
